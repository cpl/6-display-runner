00000000:       ; ;// POSITION ON THE DISPLAY:
00000000:       ; ;//     0 - null state
00000000:       ; ;//     1 - bottom segment
00000000:       ; ;//     2 - middle segment
00000000:       ; ;//     3 - top    segment
