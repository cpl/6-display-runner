00000000:       ; 
00000000:       ; 
00000000:       ; ;// DEFINE THE PLAYER POSITIONS ON THE LEFT MOST
00000000:       ; ;// 7 SEGEMENT DIGIT DISPLAY.
00000000:       ; 
00000000: 0008  ; top     DEFW    &0008;// Display: 0000_0001
00000001: 0007  ; mid     DEFW    &0007;// Display: 0100_0000
00000002: 0006  ; bot     DEFW    &0006;// Display: 0000_1000
00000003:       ; 
00000003:       ; 
00000003:       ; ;// PROGRAM RUNTIME BEGINS HERE
00000003:       ; ;// START
00000003:       ; 
00000003: 0000  ;         LDA     0000    ;// BEGIN ACC AT 0
00000004:       ; 
00000004:       ;         ;// THIS LINE SHOULD TURN ON ALL DISPLAYS
00000004: 203F  ;         ADD     &003F   ;// ADD FFB ENABLE ALL
00000005: 1FFB  ;         STA     &FFB    ;// STORE ENABLE AT FFB
00000006:       ; 
00000006:       ; 
00000006:       ; 
00000006: 0999  ;         LDA     &9999   ;// END ACC AT 9999
